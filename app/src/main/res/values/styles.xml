<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="style_1">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#3C3A3A</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textAppearance">@android:style/TextAppearance.Large</item>
    </style>
    <style name="style_2">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#686767</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textAppearance">@android:style/TextAppearance.Small</item>
    </style>
    <style name="button_style1">
        <item name="android:layout_marginTop" >10dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:text">Call me</item>
        <item name="android:padding">5dp</item>
        <item name="android:background">#05CECE</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#FCFCFC</item>
    </style>
    <style name="button_style2">
        <item name="android:layout_marginTop" >10dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">10dp</item>
        <item name="android:background">#fff</item>
        <item name="android:textStyle">bold</item>
        <item name="android:elevation">6dp</item>
        <item name="android:textColor">#6B0125</item>
    </style>
</resources>
